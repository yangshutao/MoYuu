<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logs_background"
     >
    <!-- 注册页面 -->
     <ImageView
        android:id="@+id/register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:src="@drawable/log_back" />

    <TextView
        android:id="@+id/register_back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_back"
        android:layout_toRightOf="@+id/register_back"
        android:text="@string/back" 
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        style="@style/font_color"
        />
 	<TextView
	     android:id="@+id/register_next_text"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignBaseline="@+id/register_back_text"
	     android:layout_alignBottom="@+id/register_back_text"
	     android:layout_marginRight="5dp"
	     android:layout_toLeftOf="@+id/regitser_next"
	     android:paddingRight="10dp"
	     android:text="@string/next"
	      style="@style/font_color" />
	 <ImageView
	     android:id="@+id/regitser_next"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignBottom="@+id/register_next_text"
	     android:layout_alignParentRight="true"
	     android:paddingRight="10dp"
	     android:paddingTop="10dp"
	     android:src="@drawable/log_next" />
	 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/register" 
       style="@style/font_color_25"
        />

	 <LinearLayout
	     android:id="@+id/register_user_layout"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/register_back_text"
	     android:layout_alignRight="@+id/register_next_text"
	     android:layout_below="@id/textView1"
	     android:layout_marginTop="30dp"
	     android:background="#fff"
	     android:orientation="horizontal" >

		<ImageView 
		   android:layout_width="wrap_content"
       	   android:layout_height="wrap_content" 
       	   android:src="@drawable/log_name"
       	   android:paddingLeft="4dp"
		    />

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="10"
            android:hint="@string/pni"
            android:textStyle="italic"
            android:paddingLeft="3dp" 
            style="@style/font_17"
            android:maxLines="1"
            />
   
    </LinearLayout>

	 <!--  -->

	 <LinearLayout
	     android:id="@+id/register_pass_layout"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignRight="@+id/register_user_layout"
	     android:layout_below="@+id/register_user_layout"
	     android:layout_marginTop="20dp"
	     android:layout_toRightOf="@+id/register_back"
	     android:background="#fff"
	     android:orientation="horizontal" >

	   <ImageView 
		   android:layout_width="wrap_content"
       	   android:layout_height="wrap_content" 
       	   android:src="@drawable/log_pass"
       	   android:paddingLeft="4dp"
		    />
		<EditText
		    android:id="@+id/register_pass"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:ems="10"
		    android:hint="@string/pp"
		    android:layout_gravity="center"
		    android:inputType="textPassword"
		    android:paddingLeft="3dp" 
		    android:textStyle="italic"
		    style="@style/font_17"
		    />
 	</LinearLayout>

	 <ImageView
	     android:id="@+id/register_user_ok"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignBottom="@+id/register_user_layout"
	     android:layout_alignLeft="@+id/regitser_next"
	     android:layout_marginBottom="11dp"
	     android:src="@drawable/register_ok" 
	     
	     />
	<!-- android:visibility="gone" -->
	 <ImageView
	     android:id="@+id/imageView1"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignBottom="@+id/register_pass_layout"
	     android:layout_alignLeft="@+id/register_user_ok"
	     android:layout_marginBottom="11dp"
	     android:src="@drawable/register_ok" 
	    
	     />
	 
</RelativeLayout>

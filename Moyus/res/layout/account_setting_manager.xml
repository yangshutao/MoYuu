<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#44cccccc"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#50A9E9">
		<LinearLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="backSetting"
		    android:orientation="horizontal">
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="4dip"
		        android:src="@drawable/btn_titile_back_third_default_1" />
		    <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="-5dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="#fff"
            android:text="设置"
            android:textSize="16dip" />
		</LinearLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="账号管理"
            style="@style/font_color" />

        
		 <TextView
            android:id="@+id/editer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:layout_alignParentRight="true"
            android:paddingTop="10dip"
            android:textColor="#fff"
            android:text="编辑"
            android:paddingRight="10dip"
            android:textSize="16dip" />      
    </RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account_managercc"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

	    
	    <ImageView
            android:id="@+id/headImg"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang"/>
        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headImg"
            android:text="只牵你手" 
            android:layout_marginLeft="5dip"/>
		<TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headImg"
            android:layout_below="@+id/nick"
            android:layout_marginTop="5dip"
            android:textSize="14dip"
            android:textColor="#ccc"
            android:text="874778929" 
            android:layout_marginLeft="5dip"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" /> 
    </RelativeLayout>
      <View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#cccccc"
	   />
       <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:background="#fff"
	        android:padding="10dip">
			<ImageView
            android:id="@+id/headImg"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang"/>
	        <TextView
	            android:id="@+id/message_cast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/headImg"
	            android:text="添加账号" 
	            android:textColor="#689434"
	            android:paddingTop="5dip"
				android:paddingBottom="5dip"
	            android:layout_marginLeft="5dip"/>
    </RelativeLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#cccccc"
	    android:layout_marginTop="10dip"/>
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/chat_histioy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关联QQ号" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
    <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textSize="14dip"
            android:textColor="#ccc"
            android:text="关联qq号后，即可代收改好的好友信息" 
            android:layout_marginLeft="10dip"/>
    <TextView
            android:id="@+id/bbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dip"
            android:textSize="14dip"
            android:textColor="#ccc"
            android:text="状态" 
            android:layout_marginLeft="10dip"/>
    <View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#cccccc"
	    android:layout_marginTop="5dip"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account_manager"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/account_manager1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#cccccc"
	    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/message_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="隐身" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exit_now"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">
        <TextView
            android:id="@+id/vvvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出当前账号" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>
    </RelativeLayout>
</LinearLayout>

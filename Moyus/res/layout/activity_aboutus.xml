<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44cccccc"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#50A9E9">
		<LinearLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="backSettingAbout"
		    android:orientation="horizontal">
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="4dip"
		        android:src="@drawable/btn_titile_back_third_default_1" />
		    <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="-5dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="#fff"
            android:text="设置"
            android:textSize="16dip" />
		</LinearLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="关于陌遇"
            style="@style/font_color" />

    </RelativeLayout>
     <ImageView
            android:id="@+id/touxiang"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:src="@drawable/touxiang" />

     <TextView
         android:id="@+id/NameOfApp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="5dip"
         android:text="陌遇" />
     <TextView
         android:id="@+id/visionOfApp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:textColor="#66000000"
         android:textSize="13dip"
         android:layout_marginTop="5dip"
         android:text="V1.1.0" />
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="15dip"
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/chat_histioy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/chat_histioy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能介绍" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/chat_histioy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="印象" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:id="@+id/chat_histioy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈" 
            android:paddingTop="5dip"
			android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boss_unipay_arrow_right_normal" />
        
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44cccccc"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#50A9E9">
		<LinearLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="backSettingChat"
		    android:orientation="horizontal">
		    <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="4dip"
		        android:src="@drawable/btn_titile_back_third_default_1" />
		    <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="-5dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="#fff"
            android:text="设置"
            android:textSize="16dip" />
		</LinearLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="聊天记录"
            style="@style/font_color" />
    </RelativeLayout>
    
	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/add_account"
	        android:orientation="horizontal" 
	        android:background="#fff"
	        android:padding="10dip">
	        <TextView
	            android:id="@+id/message_cast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/headImg"
	            android:text="同步聊天记录至手机" 
	            android:textColor="#689434"
	            android:paddingTop="5dip"
				android:paddingBottom="5dip"
	            android:layout_marginLeft="5dip"/>
			<CheckBox
            android:id="@+id/start_and_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/start_posit_and_close_posit"
            android:button="@null"/>
    </RelativeLayout>
    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/add_account"
	        android:orientation="horizontal" 
	        android:background="#fff"
	        android:padding="10dip">
			
	        <TextView
	            android:id="@+id/message_cast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/headImg"
	            android:text="删除聊天记录" 
	            android:textColor="#689434"
	            android:paddingTop="5dip"
				android:paddingBottom="5dip"
	            android:layout_marginLeft="5dip"/>
    </RelativeLayout>
    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/add_account"
	        android:orientation="horizontal" 
	        android:background="#fff"
	        android:padding="10dip">

	        <TextView
	            android:id="@+id/message_cast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dip"
	            android:paddingBottom="5dip"
	            android:paddingTop="5dip"
	            android:text="清空缓存"
	            android:textColor="#689434" />

    </RelativeLayout>
    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/add_account"
	        android:layout_marginTop="30dip"
	        android:orientation="horizontal" 
	        android:background="#fff"
	        android:padding="10dip">

	        <TextView
	            android:id="@+id/message_cast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dip"
	            android:paddingBottom="5dip"
	            android:paddingTop="5dip"
	            android:text="彻底清除存储空间"
	            android:textColor="#689434" />

    </RelativeLayout>
</LinearLayout>
